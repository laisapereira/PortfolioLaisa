{
    "name": "front-turborepo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "prepare": "husky install",
        "commit": "cz"
    },
    "devDependencies": {
        "commitizen": "^4.2.5",
        "cz-infojr": "^1.0.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "eslint-config-infojr": "workspace:*",
        "prettier": "latest",
        "turbo": "latest"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-infojr"
        }
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "packageManager": "pnpm@7.13.1"
}
